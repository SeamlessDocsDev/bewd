

<h1>Listing Departments</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Department</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>
  </div>


  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= link_to department.department, department_path(department) %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Show', department %></td>
        <td><%= link_to 'Edit', edit_department_path(department) %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Department', new_department_path, class: "btn btn-default" %>
<% end %>